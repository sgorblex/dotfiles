# Sgorblex's Zathura config
# ~/.config/zathura/zathurarc

# colors
set default-bg 			rgba(0,0,0,0.75)
set recolor-darkcolor 		white
set recolor-lightcolor 		rgba(0,0,0,0)
set recolor-keephue 		true
set recolor 			true
# set statusbar-bg 		rgba(3,3,3,0.2)		# not supported yet
set statusbar-bg                "#111"
set statusbar-fg                "#ccc"
set inputbar-bg                 "#111"
set inputbar-fg                 "#fff"
set highlight-color             "#fc0"
set highlight-active-color      "#f20"
set statusbar-bg                "#111"
set statusbar-fg                "#ccc"
set inputbar-bg                 "#111"
set inputbar-fg                 "#fff"
set highlight-color             "#fc0"
set highlight-active-color      "#f20"

# selection goes to clipboard
set selection-clipboard clipboard

# status bar
set font			"Cozette 10"
set window-title-basename	true
set window-title-home-tilde	true
set statusbar-home-tilde	true
set statusbar-v-padding  	10
set statusbar-h-padding  	20
set guioptions			""

# mappings
map i zoom in
map o zoom out
map z adjust_window width
map F toggle_fullscreen

map [fullscreen] i zoom in
map [fullscreen] o zoom out
map [fullscreen] z adjust_window width
map [fullscreen] F toggle_fullscreen
